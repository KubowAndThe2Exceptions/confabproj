<h1>Users</h1>

<%= link_to "Advanced Search", new_search_path %>

<%= link_to 'New User', new_user_path %>
<table class="usercard">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @users.each do |user| %>
  <tbody>
      <tr>
        <td><%= user.usertype %></td>
      </tr>
      <tr>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <td><%= user.email %></td>
      </tr>
      <tr>
        <td><%= user.describe %></td>
      </tr>
      <tr>
        <td><%= link_to 'Show', user %> | <%= link_to 'Edit', edit_user_path(user) %> | <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>